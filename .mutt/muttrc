# Source this file from ~/.muttrc and add the following:
# imap_user, imap_pass, smtp_url, smtp_pass
# smtp_url="smtp://<user>@smtp.gmail.com:587/"

set config_charset=utf-8

set imap_keepalive=240
set imap_check_subscribed

set realname = "Gustaf Sjöberg"
set reverse_name
set from = "gs@pipsq.com"
alternates "gs@distrop.com|gs@hydna.com|gsjoberg@gmail.com|gs@pipsq.com"

set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set postponed="+[Gmail]/Drafts"

unset fcc_attach

#set query_command="lbdbq '%s'"
# set query_command = "~/code/checkouts/goobook-read-only/contactos.py '%s'"
set alias_file=~/.mutt/alias
bind editor <Tab> complete-query
bind editor ^T complete

set index_format="%3M %{%b %d} %-20.20L [%Z] %s"

set sig_dashes
#set signature="echo 'Gustaf Sjöberg'|"

set markers=no
set pager="builtin"
set fast_reply=yes
set include=yes
set menu_scroll=yes
set pager_context=1
set pager_stop=yes
set sig_dashes=no
set edit_headers=yes

folder-hook . "exec collapse-all"

# Do not store local copies of sent mail as Google stores all mail sent
# through it's SMTP in "[Gmail]/Sent"
unset record
unset fcc_attach

#set pager_index_lines=6

set timeout=15
set mail_check=90

set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies

set certificate_file=~/.mutt/certificates

set sort=threads
set sort_aux = 'last-date-received'
set move = no

ignore *
unignore Date From To Cc
hdr_order Date From To Cc

# Custom bindings
bind editor <space> noop
macro index,pager gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index,pager ga "<change-folder>=[Gmail]/All Mail<enter>" "Go to all mail"
macro index,pager gs "<change-folder>=[Gmail]/Sent Mail<enter>" "Go to Sent Mail"
macro index,pager gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"

bind index,pager ,g group-reply

bind pager <up> previous-line
bind pager <down> next-line

source ~/.mutt/colors/new
source ~/.mutt/muttrc.pgp
